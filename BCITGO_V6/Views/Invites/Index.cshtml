@model IEnumerable<BCITGO_V6.Models.Invite>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InviteEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviterUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InviteEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InviterUser.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InviteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InviteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InviteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
