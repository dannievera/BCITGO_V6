                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control rounded-pill px-3 py-2" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control rounded-pill px-3 py-2" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button type="submit" class="btn btn-primary btn-rounded px-4 py-2 fw-semibold">Save Changes</button>
                            <a asp-page="/Profile/Profile" class="btn btn-outline-secondary btn-rounded px-4 py-2 fw-semibold">Cancel</a>
                        </div>
                    </form> *@


                     @if (Model.SuccessMessage != null)
                    {
                        <div class="alert alert-success">@Model.SuccessMessage</div>
                    }

                    @if (Model.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form method="post" enctype="multipart/form-data" class="text-start">

                        <div class="mb-4">
                            <label class="form-label fw-semibold mb-1">Profile Picture (Optional)</label>
                            <input type="file" class="form-control" asp-for="ProfilePicture" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold mb-1">Full Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control rounded-pill px-3 py-2" asp-for="FullName" maxlength="50" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold mb-1">Phone Number (Optional, 10 digits)</label>
                            <input type="text" class="form-control rounded-pill px-3 py-2" asp-for="PhoneNumber" maxlength="10" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold mb-1">Short Bio / About Me (Optional)</label>
                            <textarea class="form-control rounded-3 px-3 py-2" asp-for="AboutMe" maxlength="300" rows="3"></textarea>
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button type="submit" class="btn btn-primary btn-rounded px-4 py-2">Save Changes</button>
                            <a asp-page="/Profile/Profile" class="btn btn-outline-secondary btn-rounded px-4 py-2">Cancel</a>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}