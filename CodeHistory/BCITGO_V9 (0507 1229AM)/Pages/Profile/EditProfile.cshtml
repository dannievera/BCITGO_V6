@model BCITGO_V6.Pages.Profile.EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "_UserLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-4 p-4" style="background: linear-gradient(135deg, #ffffff 0%, #f7f9fb 100%);">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <img src="@(string.IsNullOrEmpty(Model.ProfilePicturePath) ? "/images/default-profile.png" : Model.ProfilePicturePath)"
                             class="rounded-circle shadow-sm mb-3" style="width: 100px; height: 100px; object-fit: cover;" />

                        <h3 class="mt-3 fw-bold">Edit Profile</h3>
                        <p class="text-muted">Update your account information below</p>
                    </div>

