@page
@model BCITGO_V6.Pages.Register.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
    Layout = "_LandingPageLayout";
}

<style>
    .login-card {
        border-radius: 16px;
        border: none;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    }

        .login-card .card-body {
            padding: 40px;
        }

    .login-title {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
    }

    .btn-primary {
        border-radius: 8px;
        background: linear-gradient(90deg, #007bff, #0062cc);
        border: none;
    }

    .error-message {
        background-color: #ffe5e5;
        color: #b60000;
        padding: 12px;
        border-radius: 8px;
        font-size: 0.95rem;
    }

    .login-links a {
        color: #6c757d;
        text-decoration: none;
    }

        .login-links a:hover {
            text-decoration: underline;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card login-card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-4 text-center login-title">🔐 Login to Your Account</h3>

                    <!-- Alert messages (Success / Error from TempData) -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form method="post" class="mt-3">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="error-message mb-3">
                                @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@Html.Raw(modelError.ErrorMessage)</div>
                                }
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <input asp-for="Input.Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">Remember Me</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>

                        <div class="mt-4 text-center small login-links">
                            <a asp-page="/Register/ForgotPassword">Forgot Password?</a>
                            <span class="mx-2">|</span>
                            <a asp-page="/Register/Register">Create Account</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
