@page "{id:int}"
@model BCITGO_V6.Pages.Book.BookRideModel
@{
    ViewData["Title"] = "Book Ride";
    Layout = "_UserLayout";
}

<h3 class="mb-4">Book Ride</h3>

<div class="card p-4 shadow-sm mb-4">
    <h5 class="fw-semibold mb-3">Ride Details</h5>
    <p><strong>From:</strong> @Model.Ride.StartLocation</p>
    <p><strong>To:</strong> @Model.Ride.EndLocation</p>
    <p><strong>Departure:</strong> @Model.Ride.DepartureDate.ToString("yyyy-MM-dd") @Model.Ride.DepartureTime</p>
    <p><strong>Price per Seat:</strong> $@Model.Ride.PricePerSeat</p>
    <p><strong>Available Seats:</strong> @(Model.Ride.TotalSeats - Model.Ride.BookedSeats - Model.Ride.PendingRequests)</p>

</div>

<form method="post" class="card p-4 shadow-sm border-0">
    <h5 class="fw-semibold mb-3">Booking Details</h5>

    <div class="mb-3">
        <label class="form-label">Seats to Book</label>
        <input type="number" name="SeatsToBook" class="form-control" value="1" min="1" max="@(Model.Ride.AvailableSeats - Model.Ride.BookedSeats)" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Booking Message (Optional)</label>
        <textarea name="BookingMessage" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary px-4 py-2">Confirm Booking</button>
</form>
