@page "/UserHome"
@model BCITGO_V6.Pages.AccountHome.UserHomeModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_UserLayout";
}

<div class="container">
    <h2 class="mb-4">🏠 Welcome back, @Model.FullName!</h2>

    <!-- Quick Stats -->
    <div class="row g-4 mb-5">

        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6>Total Rides Taken</h6>
                    <h3>12</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6>Points Earned</h6>
                    <h3>680</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6>Redemptions</h6>
                    <h3>5</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6>Profile Status</h6>
                    <h3>✅ Verified</h3>
                </div>
            </div>
        </div>

    </div>

    <!-- Recent Activity -->
    <h4 class="mb-3">Recent Activity</h4>

    <ul class="list-group mb-5">
        <li class="list-group-item">🚘 Ride to Burnaby → Completed → <a asp-page="/Rides/MyRides">View</a></li>
        <li class="list-group-item">🎁 Redeemed Starbucks Gift Card → 2 Days ago → <a asp-page="/Points/MyPoints">View</a></li>
    </ul>

    <!-- Quick Actions -->
    <h4 class="mb-3">Quick Actions</h4>

    <a asp-page="/Rides/MyRides" class="btn btn-outline-primary">Book a Ride</a>
    <a asp-page="/Points/MyPoints" class="btn btn-outline-success ms-2">Redeem Points</a>
</div>
