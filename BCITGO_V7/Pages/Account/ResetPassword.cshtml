@page
@model BCITGO_V6.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_LandingPageLayout";
}

<h2>Reset Your Password</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="post">
    <input type="hidden" asp-for="Input.UserId" />
    <input type="hidden" asp-for="Input.Token" />

    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">New Password</label>
        <input asp-for="Input.Password" class="form-control" type="password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
