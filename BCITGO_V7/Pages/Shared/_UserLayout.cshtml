@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<dynamic>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BCIT GO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', Tahoma, sans-serif;
        }

        .sidebar {
            width: 240px;
            min-height: 100vh;
            background-color: #0d47a1;
            color: white;
            position: fixed;
            padding-top: 20px;
        }

            .sidebar .brand {
                font-size: 1.4rem;
                font-weight: bold;
                text-align: center;
                padding-bottom: 20px;
                border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            }

            .sidebar a {
                color: #cfd8dc;
                padding: 12px 20px;
                display: block;
                text-decoration: none;
                transition: 0.2s;
            }

                .sidebar a:hover, .sidebar a.active {
                    background-color: #1976d2;
                    color: white;
                }

        .content {
            margin-left: 240px;
            padding: 40px;
        }

        footer {
            color: #888;
            text-align: center;
            padding: 20px 0;
            font-size: 0.9rem;
            margin-top: 30px;
        }
    </style>
</head>
<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="brand">BCIT GO</div>
        <a asp-page="/UserHome" class="@(ViewContext.RouteData.Values["page"]?.ToString() == "/UserHome" ? "active" : "")">🏠 Dashboard</a>
        <a asp-page="/Rides/MyRides">🚘 My Rides</a>
        <a asp-page="/Points/MyPoints">🎁 Points</a>
        <a asp-page="/Store/Index">🛒 Store</a>
        <a asp-page="/Profile/Profile">👤 My Profile</a>
        <a asp-page="/Account/Logout">🚪 Logout</a>
    </div>

    <!-- CONTENT -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer>
        &copy; 2025 BCIT GO - Connected Rides & Community
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
