<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BCIT GO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f9f9fb;
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 1px;
        }

        .nav-link {
            color: white !important;
        }

        .profile-menu {
            color: white;
            font-weight: 500;
        }

        footer {
            margin-top: 50px;
            color: #888;
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">BCIT GO</a>

            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a asp-page="/Profile/Profile" class="nav-link">My Profile</a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/Register/Logout" class="nav-link">Logout</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="text-center small mt-5 mb-4">
        &copy; 2025 BCIT GO - Connected Rides & Community
    </footer>

    <!-- SCRIPTS -->
    @RenderSection("Scripts", required: false)
</body>
</html>
