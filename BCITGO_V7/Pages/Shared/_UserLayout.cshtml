@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<dynamic>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BCIT GO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', Tahoma, sans-serif;
        }

        .sidebar {
            width: 250px;
            min-height: 100vh;
            background-color: #1e3a8a;
            color: white;
            position: fixed;
        }

            .sidebar a {
                color: #cbd5e1;
                padding: 12px 20px;
                display: block;
                text-decoration: none;
                transition: 0.2s;
                font-weight: 500;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #3b82f6;
                    color: white;
                }

            .sidebar .brand {
                padding: 20px;
                font-size: 1.5rem;
                font-weight: bold;
                background-color: #1e40af;
                text-align: center;
            }

        .content {
            margin-left: 250px;
            padding: 40px;
        }

        footer {
            color: #888;
            text-align: center;
            padding: 30px 0;
            margin-top: 50px;
            font-size: 0.9rem;
        }
    </style>



</head>
<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="brand">BCIT GO</div>

        <a asp-page="/UserHome" class="@(ViewContext.RouteData.Values["page"]?.ToString() == "/UserHome" ? "active" : "")">🏠 Dashboard</a>
        <a asp-page="/Rides/MyRides">🚘 My Rides</a>
        <a asp-page="/Points/MyPoints">🎁 Points</a>
        <a asp-page="/Store/Index">🛒 Store</a>
        <a asp-page="/Profile/Profile">👤 My Profile</a>
        <a asp-page="/Account/Logout">🚪 Logout</a>
    </div>

    <!-- MAIN CONTENT -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer>
        &copy; 2025 BCIT GO - Connected Rides & Community
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
