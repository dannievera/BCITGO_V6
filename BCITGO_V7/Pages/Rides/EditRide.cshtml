@page "{id:int}"
@model BCITGO_V6.Pages.Rides.EditRideModel
@{
    ViewData["Title"] = "Edit Ride";
    Layout = "_UserLayout";
}

<h3 class="mb-4">Edit Ride</h3>

@if (Model.SuccessMessage != null)
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="card p-4 shadow-sm">
    <form method="post" class="text-start">

        <input type="hidden" asp-for="Ride.RideId" />

        <div class="mb-3">
            <label class="form-label">Start Location</label>
            <input asp-for="Ride.StartLocation" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">End Location</label>
            <input asp-for="Ride.EndLocation" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Departure Date</label>
            <input asp-for="Ride.DepartureDate" type="date" class="form-control" onclick="this.showPicker()" />
        </div>

        <div class="mb-3">
            <label class="form-label">Departure Time</label>
            <input asp-for="Ride.DepartureTime" type="time" class="form-control" onfocus="this.showPicker()" />
        </div>

        <div class="mb-3">
            <label class="form-label">Price Per Seat ($)</label>
            <input asp-for="Ride.PricePerSeat" type="number" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Available Seats</label>
            <input asp-for="Ride.AvailableSeats" type="number" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Notes</label>
            <textarea asp-for="Ride.Notes" class="form-control"></textarea>
        </div>

        <div class="form-check form-switch mb-3">
            <input asp-for="Ride.LuggageAllowed" type="checkbox" class="form-check-input" id="luggageAllowed">
            <label class="form-check-label" for="luggageAllowed">Luggage Allowed</label>
        </div>

        <div class="form-check form-switch mb-4">
            <input asp-for="Ride.PetsAllowed" type="checkbox" class="form-check-input" id="petsAllowed">
            <label class="form-check-label" for="petsAllowed">Pets Allowed</label>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" name="action" value="save" class="btn btn-primary">Save Changes</button>
            <button type="submit" name="action" value="delete" class="btn btn-outline-danger">Delete Ride</button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
